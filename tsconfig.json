{
  "compilerOptions": {
    "target": "es6",
    "useDefineForClassFields": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "composite": true,
    "paths": {
      "~/*": [
        "*"
      ]
    },
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
  },
  "include": [
    "vite.config.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*/*.json",
    "src/**/*.ts",
    "src/**/*.tsx",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
